<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.giraldo.jaime.tallerunoredes.MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/left_click"
        android:id="@+id/leftButton"
        android:background="#00000000"
        android:layout_marginStart="14dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/right_click"
        android:id="@+id/rightButton"
        android:background="#00000000"
        android:layout_marginEnd="12dp"
        android:src="@drawable/right_click"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shoot_click"
        android:id="@+id/shootButton"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:elevation="0dp"
        android:scaleY="0.7"
        android:scaleX="0.7"
        android:layout_above="@+id/rightButton"
        android:layout_alignStart="@+id/rightButton" />

</RelativeLayout>
